    "name": "Sub Collection List",
    "settings": [
{
	"id": "main-title",
	"type": "text",
	"label": "Title"
	},
    {
	"id": "main-subtitle",
	"type": "text",
	"label": "Subtitle"
	},      
	{
	"id": "main-para",
	"type": "textarea",
	"label": "Paragraph"
	}      
