{%- assign product = all_products[section.settings.product] -%}
{%- assign current_variant = product.selected_or_first_available_variant -%}
{%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}

{% if product == empty %}
  {%- assign section_onboarding = true -%}
{% endif %}

<section class="bundle-deals-section">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        {% if section.settings.heading != blank %}
          <div class="section-header">
            <h2 class="h1">{{ section.settings.heading | escape }}</h2>
          </div>
        {% endif %}
        <div class="bundle-deals wrapper">
        	<div data-section-id="{{ section.id }}" data-section-type="product" class="bundle-products">
              <a href="{{ product.url }}">
                <img src="{{ section.settings.Shopping-Photo | img_url: 'large' }}" alt="">
         	 </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Bundle Product Section",
    "settings": [
   {
      "type": "text",
      "id": "heading",
      "label": "Heading"
      },
      {
        "type": "product",
        "id": "product",
        "label": "Product"
      },
      {
      "id": "Shopping-Photo",
      "type": "image_picker",
      "label": "Bundle Image"
      }
    ],
    "presets": [
      {
        "name": "Bundle Product Section",
        "category": "Product"
      }
    ]
  }
{% endschema %}